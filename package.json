{
  "name": "web-template",
  "version": "1.1.0",
  "repository": "brettanda/web-template",
  "license": "MIT",
  "description": "A basic web development template for all kinds of projects",
  "author": {
    "name": "Brett Anda",
    "url": "https://brettanda.ca"
  },
  "scripts": {
    "build": "NODE_ENV=production node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "start": "NODE_ENV=development node_modules/webpack/bin/webpack.js --watch --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "rules": {
      "semi": [
        "error",
        "always"
      ],
      "no-console": 0
    },
    "parserOptions": {
      "sourceType": "module"
    }
  },
  "dependencies": {
    "@swup/preload-plugin": "^1.0.3",
    "jquery": "^3.4.1",
    "normalize.css": "^8.0.0",
    "prismjs": "^1.17.1",
    "swup": "^2.0.7"
  },
  "devDependencies": {
    "browser-sync": "^2.24.7",
    "browser-sync-webpack-plugin": "2.0.1",
    "css-loader": "^2.1.1",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-loader": "^3.0.0",
    "eslint-plugin-vue": "^5.2.3",
    "file-loader": "^4.0.0",
    "fontmin-webpack": "^2.0.4",
    "fs": "^0.0.1-security",
    "husky": "^3.0.4",
    "laravel-mix": "^2.1.14",
    "laravel-mix-eslint": "^0.1.3",
    "laravel-mix-stylelint": "^0.2.0",
    "less": "^3.8.1",
    "less-loader": "^4.1.0",
    "mini-css-extract-plugin": "^0.7.0",
    "node-sass": "^4.13.1",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "path": "^0.12.7",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "sass": "^1.22.12",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "stylelint": "^11.0.0",
    "stylelint-config-recommended-scss": "^4.0.0",
    "stylelint-scss": "^3.11.1",
    "stylelint-webpack-plugin": "^0.10.5",
    "terser-webpack-plugin": "^1.3.0",
    "yaml": "^1.0.0"
  }
}
